@using BLL.Services
@using Controller = Web.Controllers.Controller;
@model Client

@{
    var error = Controller.GetError(TempData);
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/clients">Clients</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add</li>
    </ol>
</nav>

@if (error != null)
{

    <div class="text-center">
        <div class="mb-5">
            <h1>@error.Message</h1>
        </div>
    </div>
    return;
}

<div class="text-center">
    <div class="mb-5">
        <h1>New client</h1>
    </div>

    <div class="card">
        <div class="card-body">
            <form method="post" action="/clients/add">
                <div class="mb-2">
                    <label class="form-label">First name</label>
                    <input type="text" name="FirstName" placeholder="First name" class="form-control" required autofocus />
                </div>
                <div class="mb-2">
                    <label class="form-label">Middle name</label>
                    <input type="text" name="MiddleName" placeholder="Middle name" class="form-control" required />
                </div>
                <div class="mb-2">
                    <label class="form-label">Last name</label>
                    <input type="text" name="LastName" placeholder="Last name" class="form-control mb-2" required />
                </div>
                <button class="btn btn-primary">Add</button>
            </form>
        </div>
    </div>
</div>
